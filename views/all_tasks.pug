doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width" initial-scale="1.0")
        title= title
        link(rel='stylesheet' href='/styles/styles.css')

    body
        h1= title 
        if tasks.length
            ul.tasks
                each task in tasks
                    li
                        a(href=`tasks/${ task.id }`)= task.topic

